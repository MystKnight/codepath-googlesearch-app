<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Advanced Image Filters"
        android:textColor="@color/blue"
        android:id="@+id/tv_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Image Size"
        android:id="@+id/tv_image_size"
        android:layout_below="@+id/tv_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Color Filter"
        android:id="@+id/tv_color_filter"
        android:layout_below="@+id/tv_image_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Image Type"
        android:id="@+id/tv_image_type"
        android:layout_below="@+id/tv_color_filter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Site Filter"
        android:id="@+id/tv_site_filter"
        android:layout_below="@+id/tv_image_type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/s_image_size"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_image_size"
        android:layout_toRightOf="@+id/tv_image_size" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/s_color_filter"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_color_filter"
        android:layout_toRightOf="@+id/tv_color_filter" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/s_image_type"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_image_type"
        android:layout_toRightOf="@+id/tv_image_type" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_site_filter"
        android:textSize="16sp"
        android:hint="Enter website"
        android:layout_marginTop="-10dp"
        android:layout_toRightOf="@+id/tv_site_filter"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_site_filter" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Cancel"
        android:textColor="@color/blue"
        android:id="@+id/btn_cancel"
        android:padding="0dp"
        android:layout_below="@+id/et_site_filter"
        android:layout_toLeftOf="@+id/btn_done"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        style="?android:attr/borderlessButtonStyle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textColor="@color/blue"
        android:id="@+id/btn_done"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_below="@+id/et_site_filter"
        android:layout_alignTop="@+id/btn_cancel"
        android:layout_alignBottom="@+id/btn_cancel"
        android:layout_alignParentRight="true"
        android:background="@color/white"
        style="?android:attr/borderlessButtonStyle" />

</RelativeLayout>